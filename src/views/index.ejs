<!DOCTYPE html>
<html>
<head>
  <title>Users</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      background-color: #f4f4f4;
    }
    .container {
      width: 80%;
      margin: auto;
      overflow: hidden;
      padding: 20px;
      background: white;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 5px;
      margin-top: 50px;
    }
    h1 {
      text-align: center;
      color: #333;
    }
    ul {
      list-style: none;
      padding: 0;
    }
    li {
      background: #e9e9e9;
      margin: 5px 0;
      padding: 10px;
      border-radius: 5px;
    }
    form {
      display: inline-block;
      margin-right: 10px;
    }
    form input[type="text"],
    form input[type="email"] {
      padding: 5px;
      margin: 5px 0;
      border: 1px solid #ddd;
      border-radius: 3px;
    }
    form button {
      padding: 5px 10px;
      background: #333;
      color: white;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    form button:hover {
      background: #555;
    }
    .form-add-user {
      margin-top: 20px;
      text-align: center;
    }
    .form-add-user input {
      display: block;
      width: 50%;
      margin: 10px auto;
    }
    .form-add-user button {
      display: block;
      width: 52%;
      margin: 10px auto;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>Users</h1>
    <ul>
      <% users.forEach(user => { %>
        <li>
          <%= user.name %> - <%= user.email %>
          <form action="/users/<%= user.id %>?_method=PUT" method="POST">
            <input type="text" name="name" value="<%= user.name %>" required>
            <input type="email" name="email" value="<%= user.email %>" required>
            <button type="submit">Edit</button>
          </form>
          <form action="/users/<%= user.id %>?_method=PATCH" method="POST">
            <input type="text" name="name" placeholder="Update Name">
            <input type="email" name="email" placeholder="Update Email">
            <button type="submit">Partial Update</button>
          </form>
          <form action="/users/<%= user.id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
    <div class="form-add-user">
      <form action="/users" method="POST">
        <input type="text" name="name" placeholder="Name" required>
        <input type="email" name="email" placeholder="Email" required>
        <button type="submit">Add User</button>
      </form>
    </div>
  </div>
</body>
</html>
